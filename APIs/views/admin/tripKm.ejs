<% include ../partials/header %> <% include ../partials/sidebar %>

<div class="page-wrapper">
	<div class="container-fluid">
		<div class="row page-titles">
			<div class="col-md-6 col-8 align-self-center">
				<h3 class="text-themecolor mb-0 mt-0">Survelliance</h3>
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Operations</a></li>
					<li class="breadcrumb-item active">Trip History</li>
				</ol>
			</div>
		</div>
		<form class="form-horizontal" method="POST" action="/survellance/update" style="margin-left: 25px">
			<div class="row">
				<div class="col-md-6">
					<h5 class="mt-4 mb-2">Start*</h5>
					<input class="form-control col-md-12" type="text" name="start" value="<%= trip[0].start %>" placeholder="Start Km" />
				</div>
				<div class="col-md-6">
					<a href="/images/start_time_pic/<%= trip[0].start_time_pic %>" target="_blank"
						><img src="/images/start_time_pic/<%= trip[0].start_time_pic %>" style="width: 150px; height: 160px"
					/></a>
				</div>
			</div>

			<% const inter = trip[0].intermediate_loc.split('^'); for( let i = 0; i < inter.length; i++ ) { %>
			<div class="row">
				<div class="col-md-6">
					<h5 class="mt-4 mb-2"><%= inter[i] %>*</h5>
					<input class="form-control col-md-12" type="text" name="inter" value="<%= trip[0].intermediate ? trip[0].intermediate.split("#")[i] : "" %>"
					placeholder="Enter Km" />
				</div>
                <div class="col-md-6">
                    <% if(trip[0].intermediate_pic){ %>
                        <a href="/images/intermediate_pic/<%= trip[0].intermediate_pic.split("#")[i] %>" target="_blank"
                            ><img src="/images/intermediate_pic/<%= trip[0].intermediate_pic.split("#")[i] %>" style="width: 150px; height: 160px"
                        /></a>    
                    <% } %>
                </div>
			</div>
			<% } %>

			<div class="row">
				<div class="col-md-6">
                    <input class="form-control col-md-12" type="text" name="length" value="<%= interLen %>" hidden />
					<input class="form-control col-md-12" type="text" name="trip" value="<%= tripId %>" hidden />
                
				</div>
			</div>

			<div class="row">
				<div class="col-md-6">
					<h5 class="mt-4 mb-2">End*</h5>
					<input class="form-control col-md-12" type="text" name="end" value="<%= trip[0].end %>" placeholder="End Km" />
				</div>
				<div class="col-md-6">
					<a href="/images/end_pic/<%= trip[0].end_pic %>" target="_blank"><img src="/images/end_pic/<%= trip[0].end_pic %>" style="width: 150px; height: 160px" /></a>
				</div>
			</div>
			<br />
			<button type="submit" style="margin-left: 250px" class="btn waves-effect waves-light btn-rounded btn-info">ADD</button>
		</form>
	</div>
</div>

<% include ../partials/footer %>
