<div class="page-wrapper">
  <div class="container-fluid">
    <div class="col-md-12">
      <% include ../partials/message %>
      <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
          <h3 class="text-themecolor mb-0 mt-0">Dashboard</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="javascript:void(0)">SIM Based Tracking</a>
            </li>
            <li class="breadcrumb-item active">Add Number</li>
          </ol>
        </div>
      </div>
      <div class="card">
        <div class="card-body pb-0">
          <ul class="nav nav-tabs customtab2" role="tablist">
            <li class="nav-item col-md-6 text-center">
              <a
                class="nav-link active"
                data-toggle="tab"
                href="#addNumber"
                role="tab"
                ><span class="hidden-sm-up"><i class="ti-home"></i></span>
                <span class="hidden-xs-down">Add Number</span></a
              >
            </li>
            <li class="nav-item col-md-6 text-center">
              <a
                class="nav-link"
                data-toggle="tab"
                href="#validateNumber"
                role="tab"
                ><span class="hidden-sm-up"><i class="ti-user"></i></span>
                <span class="hidden-xs-down">Number List</span></a
              >
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="addNumber" role="tabpanel">
              <div class="p-3">
                <form
                  class="form-horizontal"
                  method="POST"
                  action="/simTracking/addNumber"
                  enctype="multipart/form-data"
                  style="margin-left: 125px"
                >
                  <div class="row">
                    <div class="col-md-6">
                      <h5 class="mt-4 mb-2">Mobile Number*</h5>
                      <input
                        class="form-control col-md-12"
                        type="text"
                        name="phone_number"
                        placeholder="Mobile Number"
                        maxlength="10"
                        minlength="10"
                        required
                      />
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <h5 class="mt-4 mb-2">Name Of Tracking Person*</h5>
                      <input
                        type="text"
                        class="form-control col-md-12"
                        name="name"
                        placeholder="Name"
                        required
                      />
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <h5 class="mt-4 mb-2">Operator*</h5>
                      <input
                        type="text"
                        class="form-control col-md-12"
                        name="operator"
                        placeholder="Operator"
                        required
                      />
                    </div>
                  </div>

                  <br />
                  <button
                    type="submit"
                    style="margin-left: 250px"
                    class="btn waves-effect waves-light btn-rounded btn-info"
                  >
                    ADD
                  </button>
                </form>
              </div>
            </div>
            <div class="tab-pane p-3" id="validateNumber" role="tabpanel">
              <div class="card-body">
                <h4 class="card-title">Number</h4>
                <div class="table-responsive m-t-40">
                  <table
                    id="datatable"
                    class="display nowrap table table-hover table-striped table-bordered"
                    cellspacing="0"
                    width="100%"
                  >
                    <thead>
                      <tr>
                        <th>S No.</th>
                        <th>Name</th>
                        <th>Mobile Number</th>
                        <th>Operator</th>
                        <th>Resend Concent</th>
                        <th>Check Concent</th>
                        <th>Edit</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for( let i = 0; i < number.length; i++ ) { %>
                      <tr>
                        <td><%= number[i].id %></td>
                        <td><%= number[i].name %></td>
                        <td><%= number[i].mob %></td>
                        <td><%= number[i].operator %></td>
                        <td>
                        <button
                        href="#" id="rConcent"
                            class="btn btn-info rConcent" value="<%= number[i].mob %>"
                            >  Resend Concent </button
                          >
                        </td>
                        <td>
                          <% if(number[i].concent=="Pending"){ %><button
                            href="#" id="chConcent"
                            class="btn btn-danger chConcent" value="<%= number[i].mob %>"
                            >  Check Concent </button
                          ><% }else{ %> <%= number[i].concent %> <%}%>
                        </td>

                        <td>
                          <a
                            class="btn btn-outline-default btn-round"
                            data-toggle="modal"
                            data-trans="<%=number[i].id%>"
                            data-target="#updateTrans"
                            >Edit</a
                          >
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="footer">Â© 2019 Road Express by CodeBuckets.in</footer>
  </div>
</div>

