<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="page-wrapper">
    <div class="container-fluid">
        <% include ../partials/message %>
        <div class="row page-titles">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="text-themecolor mb-0 mt-0">Dashboard</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Accounts</a></li>
                    <li class="breadcrumb-item active">Client Advance</li>
                </ol>
            </div>
        </div>
        <div class="col-md-11">
            <div class="card">
                <div class="card-body pb-0">
                    <div class="p-3">
                        <form class="form-horizontal" style="margin-left: 125px;" method="POST" action="/accounts/addCliAdvn">
                            <div class="row">
                                <div class="col-md-5 col-md-4">
                                    <h5 class="mt-4 mb-2">Select Client</h5>
                                    <select class="selectpicker mb-3 mr-2 btn-info btn-rounded" name="client"
                                        title="Choose City">
                                        <%for(var i = 0; i<client.length ; i++) {%>
                                        <option value="<%= client[i].id %>"><%= client[i].name %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 col-md-6">
                                    <h5 class="mt-4 mb-2">Advance Amount</h5>
                                    <input type="number" name="amount" class="form-control col-md-12"
                                        placeholder="Enter Advance" autocomplete="off">
                                </div>
                                <div class="col-md-5 col-md-4">
                                    <h5 class="mt-4 mb-2">Select Mode Of Payment</h5>
                                    <select class="selectpicker mb-3 mr-2 btn-info btn-rounded" name="mode">
                                        <option disabled selected value>Choose</option>
                                        <option value='0'>Cash</option>
                                        <option value='1'>Cheque</option>
                                        <option value='2'>Online</option>
                                    </select>
                                </div>
                            </div>
                            <div id="cheque" class="row">
                                <div class="col-md-6">
                                    <h5 class="mt-4 mb-2">Cheque Number</h5>
                                    <input type="number" name="cheque" class="form-control col-md-12"
                                        placeholder="Cheque Number" autocomplete="off">
                                </div>
                            </div>
                            <div id="trans_id" class="row">
                                <div class="col-md-6">
                                    <h5 class="mt-4 mb-2">Transaction Id</h5>
                                    <input type="text" name="online" class="form-control col-md-12"
                                        placeholder="Transaction Id" autocomplete="off">
                                </div>
                            </div>
                            <br>
                            <button type="submit" style="margin-left: 250px;"
                                class="btn waves-effect waves-light btn-rounded btn-info">ADD</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer"> Â© 2019 Road Express by CodeBuckets.in</footer>        
    </div>
</div>

<% include ../partials/footer %>

<script>
    $(document).ready(function(){
        $('#trans_id').hide();
        $('#cheque').hide();
    });
    $("select[name='mode']").on('change', function () {
        var mode = $("select[name='mode']").val();
        // console.log(mode);
        if(mode == '1'){
            $("#cheque").show();
            $('#trans_id').hide();
        }
        else if(mode=='2'){
            $("#trans_id").show();
            $('#cheque').hide();
        }
        else{
            $('#trans_id').hide();
            $('#cheque').hide();
        }
    });
</script>