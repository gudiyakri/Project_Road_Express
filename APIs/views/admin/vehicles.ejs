<script>
    $('#updateVehicle').on('show.bs.modal', function (event) {
        let vId = $(event.relatedTarget).attr('data-vehicle');
        $.ajax({
            url: '/admin/autoVehicle',
            type: 'post',
            data: {
                vId
            },
            dataType: 'json',
            success: function (data) {
                console.log(data)
                $("select[name='utype']").val(data.result[0].v_type);
                $("input[name='urc_exp']").val(data.result[0].rc_exp);
                $("input[name='uinsurance_num']").val(data.result[0].insurance_num);
                $("input[name='upermit']").val(data.result[0].permit_type);
                $("input[name='v_num']").val(data.result[0].v_num);
                $("input[name='vehicle']").val(vId);
                $("input[name='t_id']").val(data.result[0].t_id);
            }
        });
    });
</script>