<script type="text/javascript">
    $(document).ready(function () {
        $('#typesButton').click(function (event) {
            event.preventDefault()
            var inputs = $('#typesForm').serializeArray()
            //   console.log(inputs);
            $.ajax({
                url: '/admin/addFleet',
                type: 'post',
                data: {
                    fleetType: inputs[0].value,
                    capacity: inputs[1].value,
                    l: inputs[2].value,
                    b: inputs[3].value,
                    h: inputs[4].value
                },
                dataType: 'json',
                success: function (data) {
                    if (data == 'duplicate') {
                        var error_msg = 'Vehicle Already Added';
                    } else {
                        var success_msg = 'Vehicle Added';
                        $('#myTable').append(
                            `<tr><td>${inputs[0].value}</td><td>${inputs[2].value}x${inputs[3].value}x${inputs[4].value}</td><td>${inputs[1].value}</td></tr>`
                        );
                        $('#addFleet').modal('hide');
                        var audio = new Audio('/sounds/notification.mp3');
                        audio.play();
                    }
                }
            });
        });
    });
</script>


