<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="page-wrapper">
    <div class="container-fluid">
        <% include ../partials/message %>
        <div class="row page-titles">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="text-themecolor mb-0 mt-0">Dashboard</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Operations</a></li>
                    <li class="breadcrumb-item active">Add Favourites</li>
                </ol>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-body pb-0">
                    <div class="row">
                        <table id="datatable" class="display table table-hover table-striped table-bordered"
                            cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>S. No.</th>
                                    <th>State</th>
                                    <th>Mobile</th>
                                    <th>E-mail</th>
                                    <th>Employee ID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<user.length; i++) {%>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%= user[i].state %>
                                    </td>
                                    <td>
                                        <%= user[i].mob %>
                                    </td>
                                    <td>
                                        <%= user[i].email %>
                                    </td>
                                    <td>
                                        <%= user[i].employee_id %>
                                    </td>
                                    <td>
                                        <a href="/admin/favlist/<%= user[i].id %>">Add Favourites</a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer"> Â© 2019 Road Express by CodeBuckets.in</footer>
    </div>
</div>


<% include ../partials/footer %>

<script>
    $(function () {
        $('#datatable').DataTable({
            scrollY: 600,
        });
    });
</script>